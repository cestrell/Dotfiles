#!/bin/bash

g="\e[38;5;42m"
y="\e[33m"

read -r -d '' bonsai << EOM
$g               &&
             &&&&&
           &&&$y\\/$g& &&&
          &&$y|,/  |/$g& &&
           &&$y/   /  /_$g&  &&$y
             \  {  |_____/_$g&$y
             {  / /          $g&&&$y
             \`, \\{___________/_$g&&$y
              } }{       \\
              }{{         \\____$g&$y
             {}{           \`$g&$y\\\\$g&&$y
             {{}             $g&&$y
       , -=-~{ .-^- _
             \`}
              {
EOM

printf "\n%b\n\n" "$bonsai"

